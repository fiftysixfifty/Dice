@model ModelLibrary.Specification.FavoredSpecification

@{
    this.ViewData[index: "Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Dice</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="@("FavoredResultList")">
            <div class="text-danger" asp-validation-summary="@(
                Microsoft.AspNetCore.Mvc.Rendering.ValidationSummary.ModelOnly)" />

            <table cellpadding="10">
                <thead>
                    <tr>
                        <th />
                        <th>Die</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Favored face:</td>
                        <td>
                            <input asp-for="@(this.Model.FavoredFace)"
                                class="form-control" autofocus="autofocus" value="@(1)"
                                min="1" max="@(ModelLibrary.Die.Die.MaxFace)" />
                            <span asp-validation-for="@(this.Model.FavoredFace)"
                                class="text-danger" />
                        </td>
                    </tr>
                    <tr>
                        <td>Favor factor:</td>
                        <td>
                            <input asp-for="@(this.Model.FavorFactor)"
                                class="form-control" value="@(1)" min="1"
                                max="@(ModelLibrary.Die.FavoredDie.MaxFactor)" />
                            <span asp-validation-for="@(this.Model.FavorFactor)"
                                class="text-danger" />
                        </td>
                    </tr>
                    <tr>
                        <td style="white-space: nowrap;">Number of times to roll:</td>
                        <td>
                            <input asp-for="@(this.Model.NumberOfTimesToRoll)"
                                class="form-control" value="@(1)" min="1"
                                max="@(byte.MaxValue)" />
                            <span asp-validation-for="@(this.Model.NumberOfTimesToRoll)"
                                class="text-danger" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" align="center">
                            <input type="submit" value="Roll" class="btn btn-primary" />
                        </td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>
</div>

@section Scripts {
    @{ await this.Html.RenderPartialAsync(
           partialViewName: "_ValidationScriptsPartial"); }
}