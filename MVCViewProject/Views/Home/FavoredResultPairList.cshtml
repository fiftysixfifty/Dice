@model ModelLibrary.Result.FavoredResultPairList

@{
    this.ViewData[index: "Title"] = "Favored Result Pair List";
}

<div class="text-center">
    <h1 class="display-4">@(this.ViewData[index: "Title"])</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th />
            <th>First Die</th>
            <th />

            <th />
            <th>Second Die</th>
            <th />
        </tr>
        <tr>
            <th>Favored Face</th>
            <th>Favor Factor</th>
            <th>Face</th>

            <th>Favored Face</th>
            <th>Favor Factor</th>
            <th>Face</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ModelLibrary.Result.FavoredResultPair favoredResultPair in this.Model)
        {
            <tr>
                <td>
                    @(this.Html.DisplayFor(expression:
                        (ModelLibrary.Result.FavoredResultPairList
                            favoredResultPairList) =>
                        null == favoredResultPair.FavoredDie ? 0 :
                            favoredResultPair.FavoredDie.FavoredFace))
                </td>
                <td>
                    @(this.Html.DisplayFor(expression:
                        (ModelLibrary.Result.FavoredResultPairList
                            favoredResultPairList) =>
                        null == favoredResultPair.FavoredDie ? 0 :
                            favoredResultPair.FavoredDie.FavorFactor))
                </td>
                <td>
                    @(this.Html.DisplayFor(expression:
                        (ModelLibrary.Result.FavoredResultPairList
                            favoredResultPairList) =>
                        favoredResultPair.Face))
                </td>

                <td>
                    @(this.Html.DisplayFor(expression:
                        (ModelLibrary.Result.FavoredResultPairList
                            favoredResultPairList) =>
                        null == favoredResultPair.SecondFavoredDie ? 0 :
                            favoredResultPair.SecondFavoredDie.FavoredFace))
                </td>
                <td>
                    @(this.Html.DisplayFor(expression:
                        (ModelLibrary.Result.FavoredResultPairList
                            favoredResultPairList) =>
                        null == favoredResultPair.SecondFavoredDie ? 0 :
                            favoredResultPair.SecondFavoredDie.FavorFactor))
                </td>
                <td>
                    @(this.Html.DisplayFor(expression:
                        (ModelLibrary.Result.FavoredResultPairList
                            favoredResultPairList) =>
                        favoredResultPair.SecondFace))
                </td>
            </tr>
        }
    </tbody>
</table>